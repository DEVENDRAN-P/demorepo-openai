rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // ========================================
    // ROOT USER FOLDER - STRICT ISOLATION
    // ========================================
    // Users can only upload/download/delete in their own folder
    match /users/{userId}/{allPaths=**} {
      // Read: User can only read files in their own folder
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Write: User can only create/update files in their own folder
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 100 * 1024 * 1024; // Max 100MB per file
      
      // Delete: User can only delete files from their own folder
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // ========================================
    // DENY ALL OTHER ACCESS
    // ========================================
    match /{allPaths=**} {
      allow read, write, delete: if false;
    }
  }
}
